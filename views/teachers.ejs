<%-include('partials/header', {pageTitle:passedData.pageTitle})%>
    <%-include('partials/nav-bar')%>
    <table class="table">
      <tr>
        <td>No</td>
        <td>First Name</td>
        <td>Last Name</td>
        <td>Email</td>
        <td>Subject</td>
        <td>Actions</td>
      </tr>

      <%var i = 0%>
      <%for(var teacher of passedData.teachers){%>
      <tr>
        <td><%=++i%></td>
        <td><%=teacher.first_name%></td>
        <td><%=teacher.last_name%></td>
        <td><%=teacher.email%></td>
        <td><%if(teacher.Subject){%>
          <%=teacher.Subject.dataValues.subject_name%>
          <%}else{%>
            <%='Unassigned'%>
          <%}%>
        </td>
        <td><a href="/teachers/edit/<%=teacher.id%>">edit</a>|<a href="/teachers/delete/<%=teacher.id%>">delete</a></td>
      </tr>
      <%}%>
    </table>
    <form class="" action="/teachers" method="post">
      First Name:
      <input type="text" name="first_name" value="">
      Last Name:
      <input type="text" name="last_name" value="">
      Email:
      <input type="text" name="email" value="">
      Subject:
      <select class="" name="SubjectId">
        <option value=""></option>
        <%for(var subject of passedData.subjects){%>
          <option value="<%=subject.id%>"><%=subject.subject_name%></option>
        <%}%>
      </select>
      <input type="submit" name="" value="submit">
    </form>
<%-include('partials/footer')%>
